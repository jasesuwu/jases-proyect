<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AgroBro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    <script src="https://kit.fontawesome.com/628c8d2499.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Lato:400">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,900">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css" type="text/css" />
    @RenderSection("styles", required: false)
</head>

<body>
    <header class="navbar navbar-expand-lg  navbar-light">
        <ul class="navbar-nav ml-auto pr">
            <li class="nav-item">
                <a class="btn btn-outline-primary" style="margin-right: 20px;" asp-area="" asp-controller="Vet" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-outline-primary" asp-area="" asp-controller="Vet" asp-action="Agregar">Añadir nuevo producto</a>
            </li>
            <li>
                 <partial name="_LoginPartial"/>
            </li>
        </ul>
        <div class="container" style="float: right;">
            <form class="form-inline" method="POST" action="/Vet/Find">
                <div class="form-group mx-sm-3 mb-2">
                    <label class="mr-3">Buscar producto</label>
                    <input type="text" class="form-control" required name="producto">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Buscar</button>
            </form>
        </div>
    </header>
    <nav id="menu">
        <div class="menu-item">
            <div class="menu-text">
                <a href="#">Nosotros</a>
            </div>
            <div class="sub-menu">
                <div class="icon-box">
                    <div class="icon"><i class="fal fa-wind-turbine"></i></div>
                    <div class="text">
                        <div class="title">Directorio de Contactos <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box">
                    <div class="icon"><i class="fal fa-lightbulb-on"></i></div>
                    <div class="text">
                        <div class="title">Línea de Tiempo <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box">
                    <div class="icon"><i class="fal fa-bomb"></i></div>
                    <div class="text">
                        <div class="title">Blog Covid-19 <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="sub-menu-holder"></div>
            </div>
        </div>
        <div class="menu-item">
            <div class="menu-text">
                <a href="#">Productos</a>
            </div>
            <div class="sub-menu">
                <div class="icon-box">
                    <div class="icon"><i class="far fa-question-circle"></i></div>
                    <div class="text">
                        <div class="title">Por Línea Comercial <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box">
                    <div class="icon"><i class="far fa-users-class"></i></div>
                    <div class="text">
                        <div class="title">Por categoría comercial <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box">
                    <div class="icon"><i class="far fa-school"></i></div>
                    <div class="text">
                        <div class="title">Por especies <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box">
                    <div class="icon"><i class="far fa-chess-rook"></i></div>
                    <div class="text">
                        <div class="title">Por división comercial <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="menu-item">
            <div class="menu-text">
                <a href="#">Investigación</a>
            </div>
            <div class="sub-menu">
                <div class="icon-box">
                    <div class="icon"><i class="fal fa-wind-turbine"></i></div>
                    <div class="text">
                        <div class="title">Artículo técnico <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box">
                    <div class="icon"><i class="fal fa-lightbulb-on"></i></div>
                    <div class="text">
                        <div class="title">Evaluación de campo <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="icon-box">
                    <div class="icon"><i class="fal fa-bomb"></i></div>
                    <div class="text">
                        <div class="title">Investigación <i class="far fa-arrow-right"></i></div>
                    </div>
                </div>
                <div class="sub-menu-holder"></div>
            </div>
        </div>

        <div id="sub-menu-container">
            <div id="sub-menu-holder">
                <div id="sub-menu-bottom">
                </div>
            </div>
        </div>

    </nav>


    </div>
    <div class="container-fluid">
        <main role="main" class="row pb-3">
        <div class="col-md-7">
            @RenderBody()
        </div>
        <div class="col-md-4">
            @RenderSection("Rigth", false)
        </div>
        <div class="col-md-12">
            @RenderSection("Footer", false)
        </div>
    </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/form.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
