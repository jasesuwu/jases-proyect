<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AgroBro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="btn btn-danger" style="margin-right: 30px;" asp-area="" asp-controller="Vet"
                    asp-action="Index">Comprar Online</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" style="margin-right: 30px;" asp-area=""
                                asp-controller="Vet" asp-action="Index">Oficinas Regionales</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" style="margin-right: 30px;" asp-area=""
                                asp-controller="Vet" asp-action="Index">Noticias</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" style="margin-right: 30px;" asp-area=""
                                asp-controller="Vet" asp-action="Index">Catálogo Online</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" style="margin-right: 30px;" asp-area=""
                                asp-controller="Vet" asp-action="Index">Boletines Vet-In</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-primary" asp-area="" asp-controller="Vet"
                                asp-action="Index">Síguenos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <header>
        <nav class="navbar navbar-expand-lg  navbar-light">
            <div class="container">
                <div class="logo-animation">
                </div>
                <div id="navbarCollapse" class="collapse navbar-collapse row">
                    <div class="clear-fix">
                        <ul class="navbar-nav ml-auto pr">
                            <li class="nav-item position-relative ">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button"
                                        id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false">
                                        Nosotros
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#">Directorios de Contactos</a>
                                        <a class="dropdown-item" href="#">Another action</a>
                                        <a class="dropdown-item" href="#">Something else here</a>
                                    </div>
                                </div>
                            </li>
                            <li class="nav-item position-relative ">
                                <a class="nav-link dropdown-toggle " asp-area="" asp-controller="Vet"
                                    asp-action="Index">Productos</a>
                            </li>
                            <li class="nav-item position-relative ">
                                <a class="nav-link dropdown-toggle " asp-area="" asp-controller="Vet"
                                    asp-action="Index">Investigación</a>
                            </li>
                            <li class="nav-item position-relative ">
                                <a class="nav-link dropdown-toggle " asp-area="" asp-controller="Vet"
                                    asp-action="Index">Blog</a>
                            </li>
                            <li class="nav-item position-relative ">
                                <a class="nav-link dropdown-toggle " asp-area="" asp-controller="Vet"
                                    asp-action="Index">Distribuidores</a>
                            </li>
                            <form class="form-inline" method="POST" action="/Vet/Find">
                                <div class="form-group mx-sm-3 mb-2">
                                    <label class="mr-3">Buscar producto</label>
                                    <input type="text" class="form-control" required name="producto">
                                </div>
                                <button type="submit" class="btn btn-primary mb-2">Buscar</button>
                            </form>
                        </ul>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
